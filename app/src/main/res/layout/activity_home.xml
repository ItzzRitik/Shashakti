<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentPanel"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@mipmap/back"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/logo_div"
            android:visibility="gone"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splash_cover"
            android:background="@drawable/round_app"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:id="@+id/ico_splash"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/data_div"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-5dp"
            android:paddingBottom="5dp">
            <RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f1f1f1"
                android:padding="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="-5dp"
                android:scrollbars="none"
                android:visibility="gone"
                tools:context=".HomeActivity" />
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/apply"
                android:visibility="gone">
            </WebView>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:layout_above="@+id/data_div"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="28dp"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/page_tag"
            android:text="@string/home"
            android:layout_above="@+id/data_div"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="85dp"
            android:visibility="invisible"
            android:textSize="28sp"
            android:textColor="#fff"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/search"
            android:layout_above="@+id/data_div"
            android:src="@drawable/search"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
